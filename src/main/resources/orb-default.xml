<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>

<property>
  <name>goldenOrb.cluster.name</name>
  <value>OrbCluster</value>
  <description>The name of the cluster.
  </description>
</property>

<property>
  <name>goldenOrb.zookeeper.quorum</name>
  <value>localhost</value>
  <description>The server running zookeeper.
  </description>
</property>

<property>
  <name>goldenOrb.zookeeper.port</name>
  <value>2181</value>
  <description>The port zookeeper is using.
  </description>
</property>

<property>
  <name>goldenOrb.orb.launcher</name>
  <value>localhost</value>
  <description>The master server.
  </description>
</property>

<property>
  <name>goldenOrb.orb.partitionsPerMachine</name>
  <value>3</value>
  <description>Number of partitions per machine.
  </description>
</property>

<property>
  <name>goldenOrb.orb.partitions</name>
  <value>localhost:3616,localhost:3617,localhost:3618</value>
  <description>Comma delimited list of host:port for each partition to create.
  </description>
</property>

<property>
  <name>goldenOrb.orb.partition.vertex.threads</name>
  <value>10</value>
  <description>Number of vertex threads per partition.
  </description>
</property>

<property>
  <name>goldenOrb.orb.partition.messagehandlers.threads</name>
  <value>10</value>
  <description>Number of message handlers threads per partition.
  </description>
</property>

<property>
  <name>goldenOrb.orb.launcher.networkDevice</name>
  <value>eth0</value>
  <description>Network Interface to utilize.
  </description>
</property>


</configuration>
